<div class="container">
<h1>Listing Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Provider</th>
      <th>uid</th>
      <th>Name</th>
      <th>email</th>
      <th>Gender</th>
      <th>Image</th>
      <th>Actions</th>

    </tr>
  </thead>


  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.provider %></td>
        <td><%= user.uid %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.gender %></td>
        <td><img src="<%= user.image %>"></td>
        <td>

					<!-- Single button -->
					<div class="btn-group">
					  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
					    Select <span class="caret"></span>
					  </button>
					  <ul class="dropdown-menu" role="menu">
					    <li><%= link_to 'Show', user %></li>
					    <li><%= link_to 'Edit', edit_user_path(user) %></li>
					    <li><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></li>
					  </ul>
					</div>

        </td>
   
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to '<button class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> New User</button>'.html_safe, new_user_path %>

<%= link_to 'New User', new_user_path %>
</div>
